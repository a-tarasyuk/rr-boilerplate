{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  plugins": [
    "react",
    "jsx-a11y"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-console": 1,
    "global-require": 0,
    "no-param-reassign": 0,
    "object-curly-spacing": 2,
    "max-len": ["error", 120],
    "react/no-array-index-key": 0
  },
  "settings": {
    "import/ignore": ["node_modules"],
    "import/resolver": {
      "webpack": {
        "config": "webpack/dev.config.babel"
      }
    }
  },
  "globals": {
    "document": true
  }
}
